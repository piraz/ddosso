app:
  component: ddosso
  data:
    sources:
        # Set here references from sources defined on data.sources
        - session
        - diaspora
  pythonpath: ..
  port: 8016

data:
  sources:
    - name: session
      connector: redis
    - name: diaspora
      connector: sqlalchemy
      url: postgresql+psycopg2://diaspora:diasporapass@localhost:5432/diaspora
      # host: localhost
      # port: 6379
      # db: 0

components:
  - id: ddosso
    class: ddosso.app.DDOSSOComponent
    enabled: true
  - id: static_maps
    enabled: true
  #- id: admin
  #  enabled: true
  #- id: info
  #  enabled: true

log:
  level: WARNING

# Session types could be:
# file or redis.
session:
  type: redis
  enabled: true
  # Redis session handler configuration
  data:
    source: session
  # File session handler related configuration
  # path: /tmp
